@page
@using Cardealer.Models;
@model CarDealerWeb.Pages.ProfileModel
@{
}


<div class="MainProfileBox">
    <div class="ProfileBox">

        <div id="ProfileInfo">
            <div>
                <h5>Profile Information</h5>
                <div id="Navn">
                    <label>Name: @Model.Person.firstname @Model.Person.lastname</label>
                </div>
                <div>
                    <label>Type: @Model.Person.Type</label>
                </div>
                <div>
                    <label>ID: @Model.Person.personID</label>
                </div>
                <div>
                    <label>Balance: @(Model.Person.balance) DKK</label>
                </div>
            </div>
            <div>
                <img id="PP" src="./UglyMe.jpg" />
            </div>
        </div>
        <div id="BottumProfileBox">
            <div id="ListOfBoughtCars">
                <h5>Your cars</h5>
                <table>
                    <thead>
                        <tr>
                            <th style="width:40px">ID</th>
                            <th colspan="2" style="width:140px">Car</th>
                            <th style="width:120px">Price</th>
                        </tr>
                    </thead>
                </table>
                <div class="BodyBox">
                    <table>
                        <tbody>
                            @foreach (var car in Model.Person.BoughtCars)
                            {
                                <tr>
                                    <td style="width:40px"> @car.CarID</td>
                                    <td colspan="2" style="width:140px">@car.Brand @car.Model</td>
                                    <td style="width:120px">@car.Price DKK</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            </div>
        </div>

    </div>
    <div id="ProfileButtons">
        <form method="post">
            @*<select asp-for=""*@
            <div>
                <input asp-for="@Model.Balance" placeholder="Add balance" required />
                <button class="AddBalanceBtn" type="submit"> Confirm</button>
            </div>
        </form>

        <form asp-page-handler="noget" method="post">
            <div>
                <input asp-for="@Model.Firstname" placeholder="New firstname" required />
                <input asp-for="@Model.Lastname" placeholder="New Lastname" required />
                <button class="AddBalanceBtn" type="submit"> Confirm</button>
            </div>
        </form>

    </div>
</div>

<style>

    .MainProfileBox {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: auto;
    }

    .ProfileBox {
        display: flex;
        padding: 12px 15px;
        margin: 20px;
        border: 1px solid black;
        background-color: lightyellow;
        height: 520px;
        min-width: 620px;
        border-radius: 3px;
        flex-direction: column;
        justify-content: space-between;
    }

    #ProfileInfo {
        display: flex;
        height: 80px;
        min-width: 100%;
        font-size: 20px;
        justify-content: space-between;
        border-radius: 3px;
        text-transform: capitalize;
    }

    #BottumProfileBox {
        display: flex;
        height: 40%;
        width: 100%;
    }

    #ListOfBoughtCars {
        display: flex;
        flex-direction: column;
    }

    #PP {
        display: flex;
        height: 240px;
        width: 200px;
        border-radius: 3px
    }

    #ProfileButtons {
        display: flex;
        flex-direction: row;
        gap: 5px;
    }

    table, th, td {
        zoom: 100%;
        border: 1px solid black;
        border-collapse: collapse;
        text-align: center;
        width: 600px;
    }

    thead {
        display: table;
        width: 100%;
        table-layout: fixed;
    }

    .BodyBox {
        max-height: 500px;
        overflow-y: auto;
        display: block;
        width: 100%;
    }

    tbody {
        display: table;
        width: 100%;
        table-layout: fixed;
    }


</style>